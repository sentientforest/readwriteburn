# ReadWriteBurn Client Environment Variables
# Copy this file to .env.local and fill in your values

# Primary API endpoint (server backend)
VITE_GALASWAP_API=http://localhost:3000

# Alternative API endpoint (if different from primary)
VITE_PROJECT_API=http://localhost:3000

# Public key verification endpoint (for user registration checks)
VITE_BURN_GATEWAY_PUBLIC_KEY_API=http://localhost:3000

# Default vote cost in GALA tokens (with 8 decimal precision)
VITE_BURN_COST_VOTE=100000000

# Development settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# Network configuration (if using different networks)
VITE_NETWORK=localhost
VITE_CHAIN_ID=galachain-dev